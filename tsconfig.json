{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "module": "esnext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
          "*": ["./src/*"]
      },
      "strictBindCallApply": true,
      "plugins": [
        {
          "name": "typescript-plugin-css-modules",
        }
      ],
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": [
      "./config/jest/jest.setup.ts",
      "./src/**/*ts",
      "./src/**/*tsx"
    ]
  }